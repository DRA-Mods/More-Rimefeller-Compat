<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="VFECore.PatchOperationToggableSequence">
    <enabled>True</enabled>
    <mods>
      <li>Rimefeller</li>
      <li>Vanilla Furniture Expanded - Power</li>
    </mods>
    <label>Chemfuel Pump drainable by Rimefeller pipes:</label>
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="VPE_ChemfuelPump"]/comps</xpath>
        <value>
          <li Class="Rimefeller.CompProperties_Pipe"/>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="VFECore.PatchOperationToggableSequence">
    <enabled>False</enabled>
    <mods>
      <li>Rimefeller</li>
      <li>Vanilla Furniture Expanded - Power</li>
    </mods>
    <label>Portable Chemfuel Generator refuelable by Rimefeller pipes:</label>
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="VFE_PortableChemfuelPoweredGenerator"]/comps</xpath>
        <value>
          <li Class="Rimefeller.CompProperties_Pipe"/>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="VFECore.PatchOperationToggableSequence">
    <enabled>False</enabled>
    <mods>
      <li>Rimefeller</li>
      <li>Vanilla Furniture Expanded - Power</li>
    </mods>
    <label>Industrial Chemfuel Generator refuelable by Rimefeller pipes:</label>
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="VFE_IndustrialChemfuelPoweredGenerator"]/comps</xpath>
        <value>
          <li Class="Rimefeller.CompProperties_Pipe"/>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>