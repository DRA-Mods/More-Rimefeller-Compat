<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="VFECore.PatchOperationToggableSequence">
    <enabled>False</enabled>
    <mods>
      <li>Rimefeller</li>
      <li>Vanilla Furniture Expanded - Security</li>
    </mods>
    <label>Flame Turret is refuelable by Rimefeller pipes:</label>
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="VFES_Turret_Flame"]/comps</xpath>
        <value>
          <li Class="Rimefeller.CompProperties_Pipe"/>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>