    <None Include="..\..\1.4\Defs\**" LinkBase="Common 1.4\Defs" />
    <None Include="..\..\Languages\**" LinkBase="Common\Languages" />
    <None Include="..\..\1.3\Patches\**" LinkBase="Common 1.3\Patches" />
    <None Include="..\..\1.4\Patches\**" LinkBase="Common 1.4\Patches" />
